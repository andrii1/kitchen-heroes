<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <%= simple_form_for(@listing) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :location %>
        <%= f.input :availability %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Submit", class: "btn btn-primary w-100 my-3" %>
      <% end %>
    </div>
  </div>
</div>
