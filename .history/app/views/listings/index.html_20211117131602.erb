
<div class='header'>
  <h1>All the dishes</h1>
  <div class='btn-create'><%= link_to 'Create new listing', new_listing_path() %></div>
</div>

<div class='cards'>
  <% @listings.each do |listing| %>
    <div class='card'>
      <div class='text'>
        <h4><%= listing.name %></h4>
      </div>
        <div class='description'>
          <h6> <strong>Description:</strong> <%= listing.description %></h6>
        </div>
        <div class="btn-index">
          <div class='btn-show'><%= link_to 'Show', listing_path(listing) %></div>
          <div class='btn-edit'><%= link_to 'Edit', edit_listing_path(listing) %></div>
          <div class='btn-destroy'><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </div>
    </div>
  <% end %>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
